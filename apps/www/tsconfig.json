{
  "extends": "config/typescript/nextjs.json",
  "compilerOptions": {
    /* Bundled projects */
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "mdx": {
    "checkMdx": true
  },
  "include": [
    "svgr.d.ts",
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/content/index.mdx"
  ],
  "exclude": ["node_modules"]
}
