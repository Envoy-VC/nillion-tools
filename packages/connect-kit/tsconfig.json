{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "config/typescript/base.json",
  "compilerOptions": {
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.cjs",
    "*.config.mjs",
    "prettier.config.cjs"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
